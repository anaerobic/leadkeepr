{
  "name": "leadkeepr",
  "version": "1.0.0",
  "description": "Email management system",
  "private": true,
  "workspaces": [
    "cdk",
    "lambda"
  ],
  "scripts": {
    "build:all": "npm run build:lambdas && npm run build:cdk",
    "build:cdk": "npm run build --workspace=cdk",
    "build:lambdas": "npm run build --workspace=lambda",
    "build": "npm run build --workspaces",
    "cdk:bootstrap": "npm run cdk bootstrap --workspace=cdk",
    "cdk:build": "npm run build --workspace=cdk",
    "cdk:deploy:prod": "ENV_FILE=.env.prod npm run deploy --workspace=cdk -- --context environment=prod",
    "cdk:deploy:test": "ENV_FILE=.env.test npm run deploy --workspace=cdk -- --context environment=test",
    "cdk:destroy": "npm run destroy --workspace=cdk",
    "cdk:diff": "npm run diff --workspace=cdk",
    "cdk:synth": "npm run synth --workspace=cdk",
    "cdk:watch": "npm run cdk deploy -- --watch --workspace=cdk",
    "clean:cdk": "npm run clean --workspace=cdk",
    "clean": "npm run clean --workspaces --if-present",
    "deploy:prod": "npm run build:lambdas && npm run cdk:deploy:prod",
    "deploy:test": "npm run build:lambdas && npm run cdk:deploy:test",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test:cdk": "npm run test --workspace=cdk",
    "test:lambda-file": "npm run test:file --workspace=lambda",
    "test:lambda": "npm run test --workspace=lambda",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "watch:cdk": "npm run watch --workspace=cdk"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@aws-lambda-powertools/logger": "^2.0.0",
    "@aws-lambda-powertools/metrics": "^2.0.0",
    "@aws-lambda-powertools/tracer": "^2.0.0",
    "@aws-sdk/client-s3": "^3.500.0",
    "@aws-sdk/client-ses": "^3.500.0",
    "@aws-sdk/client-sqs": "^3.500.0",
    "@types/aws-lambda": "^8.10.143",
    "@types/jest": "^29.5.14",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.19.11",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "aws-cdk": "^2.100.0",
    "esbuild": "^0.25.9",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
