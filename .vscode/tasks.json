{
  "version": "2.0.0",
  "tasks": [
    // Individual workspace builds
    {
      "label": "cdk-build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build:cdk"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"]
    },
    // CDK tasks
    {
      "label": "cdk-synth",
      "type": "shell",
      "command": "npm",
      "args": ["run", "cdk:synth"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "dependsOn": ["cdk-build"],
      "problemMatcher": []
    },
    {
      "label": "cdk-deploy",
      "type": "shell",
      "command": "npm",
      "args": ["run", "deploy"],
